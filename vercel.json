{
  "version": 2,
  "builds": [
    {
      "src": "api/auth.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/chat.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/auth/(.*)", "dest": "api/auth.js" },
    { "src": "/api/chat/(.*)", "dest": "api/chat.js" },
    { "src": "/(.*)", "dest": "public/index.html" }
  ]
}